<h1>Edit <%= @menu.name %></h1>

<form action="/menus/<%= @menu.slug %>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <label>Name</label>
    <input type="text" name="menu[name]" value="<%= @menu.name %>">

  <label>Meals</label>
  <% Meal.all.each do |meal| %>
  <p><%= meal.name %></p>
  <input type="checkbox" name="meals[]" value="<%= meal.id %>" <%= 'checked' if @menu.meals.include?(meal) %>>
  <% end %>

  <input type="submit" value="Save">
</form>
