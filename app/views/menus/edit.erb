
<div class="form">
  <h1>Edit <%= @menu.name %></h1>
  <div class="form-input">
    <form action="/menus/<%= @menu.slug %>" method="POST">
      <input type="hidden" name="_method" value="PATCH">
      <label>Name</label>
        <input type="text" name="menu[name]" value="<%= @menu.name %>" required>

      <label>Meals</label>
      <% Meal.all.each do |meal| %>
      <p><%= meal.name %></p>
      <input type="checkbox" name="menu[meal_ids][]" value="<%= meal.id %>" <%= 'checked' if @menu.meals.include?(meal) %>>
      <% end %>

      <input type="submit" value="Save">
    </form>
  </div>
</div>
